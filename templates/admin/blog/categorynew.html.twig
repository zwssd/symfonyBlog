{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_category_new' %}

{% block main %}
    <h1>{{ 'title.category_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.cname) }}
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_category'|trans }}
        </button>
        <a href="{{ path('admin_category_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_categorylist'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

{% endblock %}
